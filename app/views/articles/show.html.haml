%h1
	showing selected articles
.well.col-xs-8.col-xs-offset-2
	%h2
		Title:
		#{@article.title}
	%p
		Description:
		#{@article.description}
		- if @article.categories.any?
			%p 
				=render @article.categories
	.form-group
		= link_to "Edit",edit_article_path(@article),{class: "btn btn-success"}
		= link_to 'Destroy', article_path(@article),method: :delete,data: { confirm: 'Are you sure?' },class: "btn btn-danger"